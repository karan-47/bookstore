<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <table>
    <thead>
    <tr>
      <th>Book Name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= get_book(cart.book_id).name %></td>
        <td><%= cart.quanity %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Buy', new_transaction_path() %>
